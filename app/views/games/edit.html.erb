  <div class='body'>
    <div class='container'>
        <div class='row'>
          <div class='col-md-6 col-md-offset-3'>
            <h1>ゲーム情報編集</h1>
              <%= form_for(@game, url:"/games/#{@game.id}", class:"games_edit_form") do |f| %>
                <% if @game.errors.any? %>
                  <% @game.errors.full_messages.each do |message| %>
                    <%= message %>
                <% end %>
              <% end %>
            <div class="field row">
              <h4>サムネイル</h4>
              <%= f.attachment_field :image %>
            </div>
            <div class="field row">
              <h4>タイトル</h4>
              <%= f.text_field :title ,class:"col-xs-12 black" %>
            </div>
            <div class="field row">
              <h4>詳細</h4>
              <%= f.text_area :remarks,class:"col-xs-12 black" %>
            </div>
            <div class="actions row">
              <%= f.submit '更新' ,class:"btn btn-default col-xs-12"%>
            </div>
            <% end %>
            </div>
        </div>
      </div>
    </div>