<%= render '/header'%>
  <div class='body'>
    <div class='container'>
      <p id="notice"></p>
        <div class='row'>
          <div class='col-md-6 col-md-offset-3'>
            <h1>Editing game</h1>
              <%= form_for(@game, url:"/games/#{@game.id}", class:"games_edit_form") do |f| %>
                <% if @game.errors.any? %>
                  <% @game.errors.full_messages.each do |message| %>
                    <%= message %>
                  <% end %>
                <% end %>
              <div class="field row">
                <h4>Title</h4>
                <%= f.text_field :title ,class:"col-xs-12 game_title" %>
              </div>
              <div class="field row">
                <h4>Opinion</h4>
                <%= f.text_area :remarks,class:"col-xs-12 game_remarks" %>
              </div>
              <div class="actions row">
                <%= f.submit 'Update Game' ,class:"btn btn-primary col-xs-12"%>
              </div>
            <% end %>
          <%= link_to "Show" , game_path(@game.id) %>
          <%= link_to "Back" , games_path %>
            </div>
          <div class='col-md-3'></div>
        </div>
      </div>
    </div>
<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>