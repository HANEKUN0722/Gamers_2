    <%= render '/header'%>

  	<div class='body'>
      <div class='container'>

      <p id="notice">
      <%=  notice %>
      </p>

        <div class='row'>
  <div class='col-xs-9'>
		<h2>game detail</h2>
		<table class='table'>
		  <tr>
        <% if @game.user.profile_image_id.nil? %>
        <td>
        <%= link_to user_path(@game.user) do %>
        <%= image_tag "noimage_person_c.png", :size => "30x30"%>
        <br>
        <%= @game.user.name %>
        <% end %>
        </td>

        <% else %>
        <td>
        <%= link_to user_path(@game.user) do %>
        <%= attachment_image_tag @game.user, :profile_image, :size => '30x30'%>
        <br>
        <%= @game.user.name %>
        <% end %>
        </td>
        <% end %>
        <td><%= link_to @game.title, game_path(@game) %></td>
        <td><%= @game.remarks %></td>

        <% if @game.user_id.to_i == current_user.id %>
        <td><%= link_to "Edit", edit_game_path(@game.id) ,class:"btn-sm btn-success"%></td>
        <td><%= link_to "Destroy",  "/games/#{@game.id}" ,method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn-sm btn-danger"%></td>
        <% end %>

      </tr>
    </table>

  </div>
</div>
      <p><%= render "reviews/review", game: @game %></p>
      </div>
    </div>

    <footer>
  <div class='container'>
  	<div class='row'>
    	<div class='col-xs-3 col-xs-offset-9'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>