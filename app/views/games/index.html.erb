  <p id="notice">
  <%=  notice %>
  </p>

<div class='body'>
  <div class='row'>
    <div class='container'>
      <div class='col-xs-9'>
        <h2>ゲーム一覧</h2>
      <!-- ゲーム一覧をアイコンとタイトルで表示 -->
      <% @games.each do |game| %>
        <div class="col-xs-6 col-md-3">
          <div class="thumbnail">
            <%= attachment_image_tag game,:image,size:'100x100',fallback: "noimage_person_c.png"%>

            <div class="caption">
              <h3><%= link_to game.title, game_path(game.id)  ,class:"link-black"%></h3>
            </div>

          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>

