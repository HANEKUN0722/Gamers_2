  <tbody>
    <% @games.each do |game| %>
    <tr>
      <% if game.user.profile_image_id.nil? %>
      <td>
      <%= link_to user_path(game.user) do %>
      <%= image_tag "noimage_person_c.png" ,:size => '30x30'%>
      <% end %>
      </td>

      <% else %>
      <td>
      <%= link_to user_path(game.user) do %>
      <%= attachment_image_tag game.user , :profile_image, :size => '30x30' %>
      <% end %>
      </td>
      <% end %>
      <td><%= link_to game.title, game_path(game.id) %></td>
      <td><%= game.remarks %></td>
    </tr>
     <% end %>
  </tbody>
