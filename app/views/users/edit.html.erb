 <%= render '/header'%>
  	<div class='body'>
      <div class='container'>

      <p id="notice">
      <%=  notice %>
     </p>


      	<h2>ユーザー情報編集</h2>
        <%= form_for(@user,class:"edit_user") do |f| %>
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
          <div class="field user_edit_field">
            <h4>ユーザー名</h4>
            <%= f.text_field :name , class: 'black'%>
          </div>

          <div class="user_edit_field">
            <h4>プロフィール画像</h4>
            <%= f.attachment_field :profile_image %>
          </div>

          <div class="field user_edit_field">
            <h4>ひとこと</h4>
            <%= f.text_area :introduction , class: 'black'%>
          </div>

          <div class="actions user_edit_field">
            <%= f.submit '更新' ,class:"btn btn-default" %>
          </div>

        <% end %>

      </div>
    </div>
