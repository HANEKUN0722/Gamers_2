  	<div class='body'>
      <div class='container'>

        <p id="notice"></p>

      	<div class='row'>
          <div class='col-xs-9'>
            <h2>ユーザー一覧</h2>

          <table class='table'>
            <thead>
              <tr>
                <th>アイコン</th>
                <th>ユーザー名</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
                 <% @users.each do |user| %>
                <tr>
                  <td><%= attachment_image_tag user, :profile_image ,size:'50x50' ,fallback: "noimage_person_c.png"%></td>
                  <td><%= user.name %></td>
                  <td><%=link_to "詳細", "/users/#{user.id}" , class:"btn btn-default "%></td>
                </tr>
                 <% end %>

            </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
