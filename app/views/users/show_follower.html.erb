  <div class='body'>
  	<div class='container'>

     	<div class='row'>
          <div class='col-xs-9'>
            <h2>フォロー一覧</h2>
            <!-- フォローされていれば一覧を表示-->
            <% if @user.followings.present? %>
            	<table class='table'>
            		<thead>
              			<tr>
			                <th>アイコン</th>
			                <th>ユーザー名</th>
			                <th colspan="3"></th>
		              	</tr>
		            </thead>
                	<tbody>
	                	 <% @user.followers.each do |user| %>
	                <tr>
	                 	<td><%= attachment_image_tag user, :profile_image ,size:'50x50' ,fallback: "noimage_person_c.png"%></td>
	                 	<td><%= user.name %></td>
	                 	<td><%=link_to "詳細", user_path(user)  , class:"btn btn-default "%></td>
	                </tr>
						<% end %>
	              	</tbody>
	            </table>

	         <% else %>
	 			<h3 class="text-center">フォローしているユーザーはいません</h3>
			<% end %>
          </div>
        </div>
      </div>