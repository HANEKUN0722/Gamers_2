<%= render '/header' %>
  <div class='body'>
    <div class='container'>
      <h1>チャットルーム</h1>
      <h4>【参加者】</h4>
    <!-- 参加者名-->
    <% @entries.each do |e| %>
      <h5><strong><%= e.user.name%>さん</a></strong></h5>
    <% end %>
      <hr>
    <!-- メッセージ本文-->
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <strong><%= m.content %></strong>
        <small>by <strong><%= m.user.name %>さん</a></strong></small>
        <hr>
      <% end %>
    <% else %>
      <h3 class="text-center">メッセージはまだありません</h3>
    <% end %>
    <!-- メッセージ入力フォーム-->
    <%= form_for @message do |f| %>
      <%= f.text_field :content, :placeholder => "メッセージを入力して下さい" , :size => 70 ,  class: 'black'%>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <br>
      <%= f.submit "投稿する" ,  class: 'black'%>
    <% end %>
      <hr>
    <%= link_to "ユーザー一覧に戻る", users_path,  class: 'btn btn-primary' %>