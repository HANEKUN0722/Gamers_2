<div class='col-xs-3'>
  <h2>User info</h2>
<table class='table'>
  <tr>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "noimage_person_c.png",size:'100x100'%>
  </tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<div class='row'>
  <%=link_to "",  edit_user_path(user.id) , class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>

<h2>New game</h2>
    <div class="actions row">
      <%= link_to "new game", new_game_path,class:"btn btn-primary col-xs-12"%>
    </div>
</div>