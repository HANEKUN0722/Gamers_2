<%= render '/header' %>
<div class="body">
  <div class="container">
          <div class="signup">
<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<!-- emailは使わないのでコメントに -->
  <!-- <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div> -->
<!-- 代わりにnameフォームを追加 -->
  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'black'%>
  </div>
<!-- パスワード入力フォーム -->
  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'black'%>
  </div>
<!-- 記憶に関するチェックボックス -->
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :パスワードを記憶させますか？ %>
    </div>
  <% end %>
<!-- ログインボタン -->
  <div class="actions">
    <%= f.submit "ログイン" ,class:"btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>

